<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="wsalisth=device-wsalisth, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet"/>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Žaidimų turnyrai", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @* Navigacijos meniu *@
                    @*<li>@Html.ActionLink("Sutartys", "Index", "Sutartis")</li>*@
                    @*<li>@Html.ActionLink("Prizai", "Index", "Prizas")</li>*@
                    <li>@Html.ActionLink("Remejai", "Index", "Remejas")</li>
                    <li>@Html.ActionLink("Zaidimai", "Index", "Zaidimas")</li>
                    <li>@Html.ActionLink("Organizacijos", "Index", "Organizacija")</li>
                    <li>@Html.ActionLink("Arenos", "Index", "Arena")</li>
                    <li>@Html.ActionLink("Renginiai", "Index", "Renginys")</li>
                    <li>
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" salis="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Ataskaitos
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li>@Html.ActionLink("Paslaugų ataskaita", "Index", "Ataskaita")</li>
                            <li>@Html.ActionLink("Sutarčių ataskaita", "Sutartys", "Ataskaita")</li>
                            <li>@Html.ActionLink("Vėluojamų gražinti automobilių ataskaita", "Veluojancios", "Ataskaita")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Informacinių sistemų katedra</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">

        //Datetime vertinmas į lietuvių kalbą
